# OpenClaw VPS Deployment Environment Variables
# Copy this file to .env and configure your values

# ========================================
# Gateway Configuration
# ========================================

# Security token for gateway access (REQUIRED)
# Generate a secure random string:
#   openssl rand -hex 32
OPENCLAW_GATEWAY_TOKEN=change-me-to-a-secure-random-string

# Gateway port (default: 18789)
OPENCLAW_GATEWAY_PORT=18789

# Bridge port (default: 18790)
OPENCLAW_BRIDGE_PORT=18790

# Gateway bind address
# Options: loopback (127.0.0.1), lan (0.0.0.0)
OPENCLAW_GATEWAY_BIND=lan

# ========================================
# AI Provider Configuration
# ========================================

# Claude AI Session Key (optional)
# Get from: https://claude.ai
CLAUDE_AI_SESSION_KEY=

# Claude Web Session Key (optional)
CLAUDE_WEB_SESSION_KEY=

# Claude Web Cookie (optional)
CLAUDE_WEB_COOKIE=

# ========================================
# Docker Image Configuration
# ========================================

# Docker image to use
# Options:
#   - ghcr.io/cctry/openclaw:latest (latest build from main)
#   - ghcr.io/cctry/openclaw:v2026.2.6-3 (specific version)
OPENCLAW_IMAGE=ghcr.io/cctry/openclaw:latest

# ========================================
# Volume Configuration
# ========================================

# Local directories for persistent data (optional)
# If not set, Docker will create named volumes
# OPENCLAW_CONFIG_DIR=/path/to/config
# OPENCLAW_WORKSPACE_DIR=/path/to/workspace
